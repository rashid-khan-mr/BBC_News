<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sharedViewModel"
            type="com.example.bbc_news.viewmodel.SharedViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/detailsImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detailsTitleHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/detailsImg" />

        <TextView
            android:id="@+id/detailsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/detailsTitleHeading" />

        <TextView
            android:id="@+id/detailsContentsHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contents"
            android:textStyle="bold"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/detailsTitle" />

        <TextView
            android:id="@+id/detailsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/detailsContentsHeading" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>